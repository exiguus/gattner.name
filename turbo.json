{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "bundlewatch": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "dependsOn": [
        "^test",
        "lint"
      ]
    },
    "type-check": {
      "dependsOn": [
        "^type-check",
        "build"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ]
    },
    "dev": {
      "cache": false
    }
  }
}
